{
  "name": "production_template",
  "version": "1.0.0",
  "description": "template for production server set up",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dist": "npx tsc",
    "start": "node dist/server.js",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "format-check": "prettier . --check",
    "format-fix": "prettier . --write",
    "prepare": "husky"
  },
  "author": "Pankaj",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "npm run lint-fix",
      "npm run format-fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
